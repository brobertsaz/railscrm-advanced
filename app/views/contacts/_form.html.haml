.form-horizontal
  .fieldset
    .legend
    = simple_form_for @contact, :html => { :class => 'form-horizontal' }  do |f|
      .row
        .span4.left
          = f.input :first_name
          = f.input :last_name
          = f.input :email
          = f.input :phone
          = f.input :company
        .span4.right
          = f.input :address
          = f.input :city
          = f.input :state
          = f.input :zip
      .row.buttons
        = f.submit class: 'btn btn-primary'
        = link_to 'Cancel', contacts_path, class: "btn btn-danger"

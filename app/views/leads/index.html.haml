.span10.well
  .functions.pull-right
    = link_to 'Create Lead', new_lead_path, class: 'btn'
  %table.table.table-striped
    %thead
      %tr
        %th
          Name
        %th
          Company
        %th
          Phone
        %th
          Status
        %th
          Assigned to
        %th
          Created Date
        %th
          Actions
    %tbody
      - @leads.each do |lead|
        %tr
          %td
            = lead.full_name
          %td
            = lead.company
          %td
            = lead.phone
          %td
            = lead.lead_status.to_s.capitalize
          %td
            = lead.lead_owner
          %td
            = lead.created_at.to_date
          %td
            = link_to '', lead_path(lead), class: 'icon-edit', id: 'edit'

            = link_to '', lead_path(lead), method: 'delete', class: 'icon-trash', data: {confirm: 'Are you sure that you want to delete this lead?'}, id: 'delete'